{
  "entrypoint": "index.html",
  "shell": "src/application-shell.js",
  "fragments": [
    "src/404.js",
    "src/send-feedback.js",
    "src/polymer-project.js",
    "src/developer-tools.js",
    "src/google-developers.js",
    "src/mozilla-developers.js",
    "src/website-development.js",
    "src/hyper-link.js"
  ],

  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],

  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js",
    "src/polymers.json",
    "src/mozilla.json",
    "src/developer.json",
    "src/website.json",
    "package.json",
    "sitemap.xml"
  ],

  "builds": [{
      "bundle": { "inlineScripts": false },
      "js":     { "minify": true, "transformModulesToAmd": true },
      "css":    { "minify": true },
      "html":   { "minify": true },
      "addServiceWorker": true
    }]
}
